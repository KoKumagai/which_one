<% provide(:title, 'Create survey') %>
<div class="container">
   <div class="row">
      <h1>Create Survey</h1>
      <%= form_for(@survey) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="frame3">
         <div class="col-xs-12">
            <div id="sentence_type" class="radio">
               <h2>1. Select senetence type</h2>
               <div class="radio_buttons">
                  <div class="general_eg sentence_radio">
                     <label>
                     <%= f.radio_button :sentence_type, '1', 'data-radio'.to_sym => 'sentence-type', checked: true %>
                     <span class="sentence_word">e.g.) Which one do you like, apple or orange?</span>
                     </label>
                  </div>
                  <div class="be_eg sentence_radio">
                     <label>
                     <%= f.radio_button :sentence_type, '2', 'data-radio'.to_sym => 'sentence-type' %>
                     <span class="sentence_word">e.g.) Which one is stronger, lion or gorilla?</span>
                     </label>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-xs-12">
            <div class="sentence">
               <h2>2. Write sentence</h2>
               <div id="general_sentence col-xs-12">
                  <div class="write_sentence">
                     <span id="general_prefix" class="sentence_word">Which one do you</span>
                     <span id="be_prefix" class="sentence_word" style="display: none">Which one is</span>&nbsp;
                     <%= f.text_field :comparison_word, class: 'comparison_word', placeholder: 'like' %>,&nbsp;
                     <%= f.text_field :first_word, class: 'first_word', placeholder: 'apple' %>&nbsp;or&nbsp;
                     <%= f.text_field :second_word, class: 'second_word', placeholder: 'orange' %>?
                  </div>
               </div>
            </div>
         </div>
         <div class="col-xs-12">
            <div class="category">
               <h2>3. Select Category</h2>
               <%= f.select(:category) do %>
               <%= content_tag(:option, 'Select category', value: nil, disabled: 'disabled', selected: 'selected') %>
               <% Survey::CATEGORY.each do |c| -%>
               <%= content_tag(:option, c.last, value: c.first) %>
               <% end %>
               <% end %>
            </div>
         </div>
         <div class="col-xs-12">
            <div class="submit_button">
               <%= f.submit "Create survey", class: "btn btn-primary btn-lg" %>
            </div>
         </div>
         <% end %>
      </div>
   </div>
</div>
